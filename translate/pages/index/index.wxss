/**index.wxss**/

page{
  height: 100%;
  width: 100%;
}
.container{
  background: #eff1f1;
}
.chat-item-row{
  padding: 15rpx;
  display: flex;
  flex-direction: row;
}

.chat-item-me{
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
}

.chat-item-he{
  width: 100%;
  float: left;
  display: flex;
  flex-direction: row;
}

.chat-avatar{
  flex-shrink:0;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  overflow: hidden;
}

